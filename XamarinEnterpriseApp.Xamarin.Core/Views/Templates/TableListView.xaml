<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="XamarinEnterpriseApp.Xamarin.Core.Views.TableListView"
        BackgroundColor="Transparent" VerticalOptions="CenterAndExpand">
    <StackLayout HorizontalOptions="FillAndExpand"
            VerticalOptions="CenterAndExpand" Orientation="Vertical">
        <Label x:Name="CaptionLabel"
                Style="{StaticResource FormItemCaptionStyle}" Margin="5,1" IsVisible="False"/>
        <ScrollView x:Name="Scroll" HorizontalOptions="FillAndExpand"
                VerticalOptions="CenterAndExpand" Orientation="Vertical"
                HorizontalScrollBarVisibility="Never"
                VerticalScrollBarVisibility="Never">
            <StackLayout x:Name="ItemContainer" Margin="0,0,0,0"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="CenterAndExpand" Orientation="Vertical"
                    Spacing="1" />
        </ScrollView>
    </StackLayout>

</ContentView>
