<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="XamarinEnterpriseApp.Xamarin.Core.Views.TabBarView"
        xmlns:local="clr-namespace:XamarinEnterpriseApp.Xamarin.Core.Extensions;assembly=XamarinEnterpriseApp.Xamarin.Core"
        BackgroundColor="Transparent" HorizontalOptions="FillAndExpand"
        xmlns:controls="clr-namespace:XamarinEnterpriseApp.Xamarin.Core.Controls;assembly=XamarinEnterpriseApp.Xamarin.Core">
    <Frame x:Name="ContinerFrame" HasShadow="False"
            HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"
            Padding="0,0" BorderColor="Transparent">
        <ScrollView HorizontalScrollBarVisibility="Never"
                VerticalScrollBarVisibility="Never" x:Name="ScrollView"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="CenterAndExpand" Orientation="Horizontal">
            <StackLayout x:Name="ButtonPanel" Margin="0,0,0,0"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="CenterAndExpand" Orientation="Horizontal"
                    Spacing="0" />
        </ScrollView>
    </Frame>
</ContentView>